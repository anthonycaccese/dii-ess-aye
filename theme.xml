<?xml version="1.0" encoding="UTF-8"?>
<theme>
    <formatVersion>7</formatVersion>

    <!--
        Display: 1280x480 (two 640x480 screens horizontally spanned)
        Top screen (left): X 0-0.5, center X=0.25
        Bottom screen (right): X 0.5-1.0, center X=0.75
    -->

    <!-- Boot animation
         Currently disabled by default in ROCNKIX, here for concept though.
    <view name="splash" subset="splashview" defaultTransition="fade">
        Comment: Both screens
        <splash name="splash">
            <backgroundColor>F2F2F2FF</backgroundColor>
        </splash>
        Comment: Splash probably doesn't support sound?
        <sound name="splash">
            <path>./assets/sounds/splash.wav</path>
        </sound>

        Comment: Top screen (X 0-0.5)
        <image name="splash_logo">
            <path>./assets/images/common/distro_logo.png</path>
            <pos>0.25 0.5</pos>
            <origin>0.5 0.5</origin>
            <maxSize>0.3 0.6</maxSize>
            <color>FFFFFF00</color>
            <storyboard>
                <animation property="color" from="FFFFFF00" to="FFFFFFFF" begin="0" duration="350" mode="linear"/>
            </storyboard>
        </image>

        <image name="splash_effect">
            <path>./assets/images/common/distro_effect.png</path>
            <pos>0.125 0.5</pos>
            <origin>0.5 0.5</origin>
            <maxSize>0.2 0.6</maxSize>
            <color>FFFFFF00</color>
            <storyboard>
                <animation property="color" from="FFFFFF00" to="FFFFFFCC" begin="0" duration="300" mode="linear"/>
                <animation property="color" from="FFFFFFCC" to="FFFFFF00" begin="300" duration="200" mode="easeOutCubic" repeat="forever"/>
                <animation property="size" from="0.15 0.4" to="0.3 0.8" begin="300" duration="200" mode="linear" repeat="forever"/>
            </storyboard>
        </image>
    </view> -->

    <!-- Static elements 
         Definitely need to not be in screen view, as they overlay the option menu.
         Though I'm not sure how else to keep them static as the carousel moves?    -->
    <view name="screen">
        <!-- Top screen (X 0-0.5) -->
        <image name="left_tab_image" extra="true">
            <path>./assets/images/common/left_tab.png</path>
            <pos>0 0</pos>
            <size>0.125 0.1</size>
            <zIndex>1</zIndex>
        </image>

        <text name="left_tab_text" extra="true">
            <text>Prev</text>
            <pos>0.04 0.03</pos>
            <fontPath>./assets/fonts/dsi_font.otf</fontPath>
            <fontSize>0.05</fontSize>
            <color>333333FF</color>
            <alignment>left</alignment>
            <zIndex>2</zIndex>
        </text>

        <image name="right_tab_image" extra="true">
            <path>./assets/images/common/right_tab.png</path>
            <pos>0.375 0</pos>
            <size>0.125 0.1</size>
            <zIndex>1</zIndex>
        </image>

        <text name="right_tab_text" extra="true">
            <text>Next</text>
            <pos>0.46 0.03</pos>
            <fontPath>./assets/fonts/dsi_font.otf</fontPath>
            <fontSize>0.05</fontSize>
            <color>333333FF</color>
            <alignment>right</alignment>
            <zIndex>2</zIndex>
        </text>

        <!-- Bottom screen (X 0.5-1.0) -->
        <image name="text_bubble" extra="true">
            <path>./assets/images/common/text_bubble.png</path>
            <pos>0.75 0.72</pos>
            <origin>0.5 0.5</origin>
            <size>0.375 0.45</size>
            <zIndex>51</zIndex>
        </image>

        <image name="start_window" extra="true">
            <path>./assets/images/common/start_window.png</path>
            <pos>0.75 0.35</pos>
            <origin>0.5 0.5</origin>
            <maxSize>0.12 0.32</maxSize>
            <zIndex>55</zIndex>
        </image>

        <image name="scroll_bar" extra="true">
            <path>./assets/images/common/scroll_bar.png</path>
            <pos>0.75 0.95</pos>
            <origin>0.5 0.5</origin>
            <size>0.45 0.1</size>
            <zIndex>1</zIndex>
        </image>
    </view>

    <!-- Global elements -->
    <view name="system, basic, detailed">
        <!-- Both screens -->
        <image name="background" extra="true">
            <color>F2F2F2FF</color>
        </image>

        <!-- Bottom screen (X 0.5-1.0) -->
        <image name="menu_slot" extra="true">
            <path>./assets/menu_slot.png</path>
            <pos>0.75 0.35</pos>
            <origin>0.5 0.5</origin>
            <size>0.6 0.32</size>
            <minSize>0.1 0.32</minSize>
            <tile>true</tile>
            <zIndex>53</zIndex>
        </image>

        <!-- Scroll window should move across the center 4/5 range of scroll bar, but might not be possible? -->
        <image name="scroll_window" extra="true">
            <path>./assets/scroll_window.png</path>
            <pos>0.75 0.95</pos>
            <origin>0.5 0.5</origin>
            <size>0.36 0.08</size>
            <zIndex>2</zIndex>
        </image>

        <!-- Visibility overrides -->
        <helpsystem name="help">
            <textColor>00000000</textColor>
            <iconColor>00000000</iconColor>
        </helpsystem>
    </view>

    <!-- Main system selection menu -->
    <view name="system" subset="systemview">
        <!-- Both screens -->
        <sound name="launch">
            <path>./assets/sounds/select.wav</path>
        </sound>

        <!-- Top screen (X 0-0.5) -->
        <image name="distro_logo" extra="true">
            <path>./assets/images/common/distro_logo.png</path>
            <pos>0.25 0.5</pos>
            <origin>0.5 0.5</origin>
            <maxSize>0.3 0.6</maxSize>
            <zIndex>1</zIndex>
        </image>

        <!-- Bottom screen (X 0.5-1.0) -->
        <carousel name="systemcarousel">
            <type>horizontal</type>
            <pos>0.75 0.35</pos>
            <origin>0.5 0.5</origin>
            <size>0.5 0.32</size>
            <logoSize>0.09 0.24</logoSize>
            <logoScale>1.0</logoScale>
            <color>00000000</color>
            <maxLogoCount>5</maxLogoCount>
            <zIndex>50</zIndex>
            <scrollSound>./assets/sounds/scroll.wav</scrollSound>
        </carousel>

        <text name="logoText">
            <pos>0.75 0.54</pos>
            <origin>0.5 0.5</origin>
            <size>0.35 0.05</size>
            <fontPath>./assets/fonts/dsi_font.otf</fontPath>
            <fontSize>0.03</fontSize>
            <color>333333FF</color>
            <alignment>center</alignment>
            <zIndex>52</zIndex>
        </text>

        <text name="systemInfo">
            <pos>0.75 0.75</pos>
            <origin>0.5 0.5</origin>
            <size>0.35 0.3</size>
            <fontPath>./assets/fonts/dsi_font.otf</fontPath>
            <fontSize>0.025</fontSize>
            <color>333333FF</color>
            <alignment>center</alignment>
            <zIndex>53</zIndex>
        </text>

        <image name="logo">
            <pos>0.75 0.35</pos>
            <origin>0.5 0.5</origin>
            <maxSize>0.09 0.24</maxSize>
            <zIndex>54</zIndex>
        </image>
    </view>

    <view name="basic, detailed" subset="gamelistview">
        <!-- Both screens -->
        <sound name="launch">
            <path>./assets/sounds/launch.wav</path>
        </sound>
        <sound name="back">
            <path>./assets/sounds/back.wav</path>
        </sound>

        <!-- Top screen (X 0-0.5) -->
        <image name="preview_panel" extra="true">
            <path>./assets/images/common/preview_panel.png</path>
            <pos>0.25 0.425</pos>
            <origin>0.5 0.5</origin>
            <size>0.3 0.55</size>
            <zIndex>1</zIndex>
        </image>

        <video name="md_video">
            <pos>0.25 0.425</pos>
            <origin>0.5 0.5</origin>
            <maxSize>0.255 0.4675</maxSize>
            <delay>3</delay>
            <showSnapshotNoVideo>true</showSnapshotNoVideo>
            <showSnapshotDelay>true</showSnapshotDelay>
            <snapshotSource>image</snapshotSource>
            <zIndex>2</zIndex>
        </video>

        <!-- Bottom screen (X 0.5-1.0) -->
        <carousel name="gamecarousel">
            <type>horizontal</type>
            <pos>0.75 0.35</pos>
            <origin>0.5 0.5</origin>
            <size>0.5 0.32</size>
            <logoSize>0.09 0.24</logoSize>
            <logoScale>1.0</logoScale>
            <color>00000000</color>
            <maxLogoCount>5</maxLogoCount>
            <zIndex>50</zIndex>
            <scrollSound>./assets/sounds/scroll.wav</scrollSound>
        </carousel>

        <text name="md_name">
            <pos>0.75 0.56</pos>
            <origin>0.5 0.5</origin>
            <size>0.35 0.05</size>
            <fontPath>./assets/fonts/dsi_font.otf</fontPath>
            <fontSize>0.035</fontSize>
            <color>333333FF</color>
            <alignment>center</alignment>
            <zIndex>52</zIndex>
        </text>

        <text name="md_description">
            <pos>0.75 0.72</pos>
            <origin>0.5 0.5</origin>
            <size>0.35 0.25</size>
            <fontPath>./assets/fonts/dsi_font.otf</fontPath>
            <fontSize>0.022</fontSize>
            <color>555555FF</color>
            <alignment>center</alignment>
            <zIndex>52</zIndex>
        </text>

        <image name="md_thumbnail">
            <pos>0.75 0.35</pos>
            <origin>0.5 0.5</origin>
            <maxSize>0.09 0.24</maxSize>
            <zIndex>51</zIndex>
        </image>
    </view>
</theme>
